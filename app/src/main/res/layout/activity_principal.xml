<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img"
    android:layout_height="match_parent"
    tools:context=".interface_user.Principal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:text="Usuario"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et1"
                style="@style/the_inputs"
                android:layout_marginTop="10dp"
                android:hint="@string/user"
                app:layout_constraintLeft_toLeftOf="@id/tx1"
                app:layout_constraintRight_toRightOf="@id/tx1"
                app:layout_constraintTop_toBottomOf="@id/tx1"
                app:startIconContentDescription="@android:string/copyUrl"
                app:startIconDrawable="@drawable/ic_baseline_accessibility_24"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name1"
                    style="@style/the_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tx2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="20dp"
                android:text="@string/nombre"
                android:textColor="?android:attr/colorActivatedHighlight"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et2"
                style="@style/the_inputs"
                android:layout_marginTop="10dp"
                android:hint="@string/nombre"
                app:layout_constraintLeft_toLeftOf="@id/tx2"
                app:layout_constraintRight_toRightOf="@id/tx2"
                app:layout_constraintTop_toBottomOf="@id/tx2"
                app:startIconContentDescription="@android:string/copyUrl"
                app:startIconDrawable="@drawable/ic_baseline_assignment_ind_24"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name2"
                    style="@style/the_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tx3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="20dp"
                android:text="@string/apellido"
                android:textColor="?android:attr/colorActivatedHighlight"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et3"
                style="@style/the_inputs"
                android:layout_marginTop="10dp"
                android:hint="@string/apellido"
                app:layout_constraintLeft_toLeftOf="@id/tx3"
                app:layout_constraintRight_toRightOf="@id/tx3"
                app:layout_constraintTop_toBottomOf="@id/tx3"
                app:startIconContentDescription="@android:string/copyUrl"
                app:startIconDrawable="@drawable/ic_baseline_assignment_ind_24"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name3"
                    style="@style/the_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tx4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="350dp"
                android:layout_marginRight="20dp"
                android:text="@string/telefono"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et4"
                style="@style/the_inputs"
                android:layout_marginTop="10dp"
                android:hint="Telefono"
                app:layout_constraintLeft_toLeftOf="@id/tx4"
                app:layout_constraintRight_toRightOf="@id/tx4"
                app:layout_constraintTop_toBottomOf="@id/tx4"
                app:startIconContentDescription="@android:string/copyUrl"
                app:startIconDrawable="@drawable/ic_baseline_call_end_24"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name4"
                    style="@style/the_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPhonetic"
                    android:textColor="@color/white"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tx5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="450dp"
                android:layout_marginRight="20dp"
                android:text="@string/Correo"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et5"
                style="@style/the_inputs"
                android:layout_marginTop="10dp"
                android:hint="@string/user"
                app:layout_constraintLeft_toLeftOf="@id/tx5"
                app:layout_constraintRight_toRightOf="@id/tx5"
                app:layout_constraintTop_toBottomOf="@id/tx5"
                app:startIconContentDescription="@android:string/copyUrl"
                app:startIconDrawable="@drawable/ic_baseline_mail_24"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name5"
                    style="@style/the_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="160dp"
                android:layout_marginRight="80dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:shadowColor="#0BDCC8"
                android:text="ACEPTAR"
                android:background="@drawable/border_button"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/tx5"
                app:layout_constraintRight_toRightOf="@id/tx5"
                app:layout_constraintTop_toBottomOf="@id/tx5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>